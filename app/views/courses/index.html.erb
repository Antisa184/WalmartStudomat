<p style="color: green"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark ">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Type</th>
    <th scope="col">Semester</th>
    <th scope="col">ECTS</th>
    <th colspan="1"></th>
    <% if current_user.user_type == 'admin' %>
      <th colspan="2"></th>
    <%end %>
  </tr>
  </thead>

  <div id="courses">
    <tbody>
    <% @courses.each_with_index do |course, index | course  %>
      <td> <%= index+1 %> </td>
      <td> <%= course.name %> </td>
      <td> <%= course.course_type %> </td>
      <td> <%= course.semester %> </td>
      <td> <%= course.ECTS %> </td>
      <td> <%= link_to "Show", course %> </td>
      <% if current_user.user_type == 'admin' %>
        <td> <%= link_to "Edit", edit_course_path(course) %> </td>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      <% end %>
      </tbody>
    <% end %>
    </div>
</table>
<%= link_to "Previous page", :back, class:"btn btn-secondary" %>
<% if current_user.user_type == 'admin' %>
  <%= link_to "New course", new_course_path, class:"btn btn-secondary" %>
<% end %>
