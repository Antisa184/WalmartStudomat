<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark ">
  <tr>
    <th scope="col">#</th>
    <th scope="col">First name</th>
    <th scope="col">Last name</th>
    <th scope="col">JMBAG</th>
    <th scope="col">DOB</th>
    <th colspan="3â€œ"></th>
  </tr>
  </thead>

  <div id="students">
    <tbody>
    <% @students.each_with_index do |student, index | student  %>
        <td> <%= index+1 %> </td>
        <td> <%= student.firstName %> </td>
        <td> <%= student.lastName %> </td>
        <td> <%= student.JMBAG %> </td>
        <td> <%= student.DOB %> </td>
        <td> <%= link_to "Show", student %> </td>
        <td> <%= link_to "Edit", edit_student_path(student) %> </td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tbody>
    <% end %>
    </div>
</table>
<%= link_to "Previous page", :back, class:"btn btn-secondary" %>
<% if current_user.user_type == 'admin' %>
  | <%= link_to "New student", new_student_path, class:"btn btn-secondary"  %>
<% end %>