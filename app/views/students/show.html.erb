<p style="color: green"><%= notice %></p>

<%= render @student %>

<div>
  <%= link_to "Previous page", :back, class:"btn btn-secondary" %>
  <% if current_user.user_type == 'admin' %>
  |
  <%= link_to "Edit this student", edit_student_path(@student), class:"btn btn-secondary" %> |
  <%= link_to "Students", students_path, class:"btn btn-secondary" %>
  <br/><br/>
  <%= button_to 'Delete this student', @student, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%end %>
</div>

